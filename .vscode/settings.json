{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with AddressSanitizer",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fsanitize=address",
                "-g",
                "-O1",
                "-fno-omit-frame-pointer",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Run with AddressSanitizer",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "\"${fileDirname}/${fileBasenameNoExtension}; exec bash\""
            ],
            "dependsOn": "Build with AddressSanitizer",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        }
    ],
    "files.associations": {
